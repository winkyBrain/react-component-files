{
  "name": "react-quick-component",
  "displayName": "React Quick Component",
  "description": "Quickly generate React components from a folder.",
  "version": "0.1.0",
  "publisher": "winkyBrain",
  "keywords": [
    "react",
    "component",
    "generator",
    "template",
    "typescript",
    "javascript",
    "jsx",
    "tsx"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/winkyBrain/react-quick-component.git"
  },
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Snippets"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "react-quick-component.generateFiles",
        "title": "⚛️ Generate React Component"
      },
      {
        "command": "react-quick-component.openComponentTemplate",
        "title": "React Quick Component: Edit Component Template"
      },
      {
        "command": "react-quick-component.openStyleTemplate",
        "title": "React Quick Component: Edit Style Template"
      },
      {
        "command": "react-quick-component.openIndexTemplate",
        "title": "React Quick Component: Edit Index Template"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "react-quick-component.generateFiles",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "React Quick Component",
      "properties": {
        "react-quick-component.fileExtension": {
          "type": "string",
          "default": "tsx",
          "enum": [
            "tsx",
            "jsx"
          ],
          "description": "File extension for generated components.",
          "order": 0
        },
        "react-quick-component.fileNameCase": {
          "type": "string",
          "default": "camelCase",
          "enum": [
            "camelCase",
            "PascalCase",
            "kebab-case",
            "snake_case"
          ],
          "description": "Casing for the component folder and file names.",
          "order": 1
        },
        "react-quick-component.createIndexFile": {
          "type": "boolean",
          "default": true,
          "description": "Create an index file for re-exporting the component.",
          "order": 2
        },
        "react-quick-component.createStyleFile": {
          "type": "boolean",
          "default": true,
          "description": "Create a style file for the component.",
          "order": 3
        },
        "react-quick-component.styleExtension": {
          "type": "string",
          "default": "scss",
          "enum": [
            "scss",
            "css",
            "less",
            "sass"
          ],
          "description": "File extension for generated style modules.",
          "order": 4
        },
        "react-quick-component.editTemplates": {
          "type": "null",
          "markdownDescription": "[Edit Component Template](command:react-quick-component.openComponentTemplate)\n\n[Edit Style Template](command:react-quick-component.openStyleTemplate)\n\n[Edit Index Template](command:react-quick-component.openIndexTemplate)",
          "default": null,
          "order": 5
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "node esbuild.js",
    "build": "node esbuild.js production",
    "watch": "node esbuild.js watch",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "test": "jest --config jest.config.js"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.82.0",
    "cpy": "^11.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.47.0",
    "jest": "^30.1.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.1.6",
    "vsce": "^2.15.0"
  }
}
